<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StationDetailsActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/searchBtn"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:srcCompat="@drawable/fuel_app_logo_removebg_preview" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="Details of the Station"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text="Petrol Queue"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TableRow
                    android:background="#0079D6"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Vehicle Type" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Queue Length" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Waiting TIme" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Join" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Exit" />

                </TableRow>

                <TableRow
                    android:background="#DAE8FC"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Car" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="01.30" />

                    <Button
                        android:id="@+id/joinBtn1"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2px"
                        android:layout_marginLeft="15px"
                        android:layout_marginTop="15px"
                        android:layout_marginEnd="10px"
                        android:backgroundTint="@color/white"
                        android:padding="20px"
                        android:paddingTop="20px"
                        android:paddingBottom="20px"
                        android:text="Join"
                        android:textAllCaps="false"
                        android:textColor="#008080"
                        android:textSize="18sp" />
                    <Button
                        android:id="@+id/exitBtn1"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2px"
                        android:layout_marginLeft="15px"
                        android:layout_marginTop="15px"
                        android:layout_marginEnd="10px"
                        android:backgroundTint="@color/white"
                        android:padding="20px"
                        android:paddingTop="20px"
                        android:paddingBottom="20px"
                        android:text="Exit"
                        android:textAllCaps="false"
                        android:textColor="#b84351"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow
                    android:background="#DAE8FC"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bike" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="00.30" />

                    <Button
                        android:id="@+id/joinBtn2"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
